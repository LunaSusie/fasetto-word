<Application x:Class="CustomWindowAndStyles.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CustomWindowAndStyles"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Rescources/Styles/Colors.xaml"></ResourceDictionary>
                 <ResourceDictionary Source="Rescources/Styles/Fonts.xaml"></ResourceDictionary>
                 <ResourceDictionary Source="Rescources/Styles/Texts.xaml"></ResourceDictionary>
                 <ResourceDictionary Source="Rescources/Styles/Buttons.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Rescources/Styles/Windows.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
